{
  "variables": {
    "ansible_host": "default",
    "ansible_connection": "docker"
  },
  "builders": [
    {
      "type": "docker",
      "image": "debian:buster-slim",
      "commit": "true",
      "pull": "true",
      "changes": [
        "VOLUME /data",
        "WORKDIR /data",
        "EXPOSE 6379",
        "ENTRYPOINT [\"docker-entrypoint.sh\"]",
        "CMD [\"/bin/bash\"]"
      ],
      "run_command": [
        "-d",
        "-i",
        "-t",
        "--name",
        "{{user `ansible_host`}}",
        "{{.Image}}",
        "/bin/bash"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "bootstrap.yml",
      "extra_arguments": [
        "--extra-vars",
        "ansible_host={{user `ansible_host`}} ansible_connection={{user `ansible_connection`}}"
      ]
    },
    {
      "type": "ansible",
      "playbook_file": "provision.yml",
      "extra_arguments": [
        "--extra-vars",
        "ansible_host={{user `ansible_host`}} ansible_connection={{user `ansible_connection`}}"
      ]
    },
    {
      "type": "ansible",
      "playbook_file": "cleanup.yml",
      "extra_arguments": [
        "--extra-vars",
        "ansible_host={{user `ansible_host`}} ansible_connection={{user `ansible_connection`}}"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "myimage",
        "tag": "latest"
      }
    ]
  ]
}
