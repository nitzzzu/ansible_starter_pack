sed -i 's/"exit_type":"Crashed"/"exit_type":"Normal"/' /home/{{ pi_user_name }}/.config/chromium/Default/Preferences

chromium-browser --noerrdialogs --incognito --kiosk {{ chromium_url }} --disable-infobars &


